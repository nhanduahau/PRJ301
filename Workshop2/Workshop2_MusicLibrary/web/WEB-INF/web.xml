<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>Controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSongController</servlet-name>
        <servlet-class>Controller.AddSongController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveSongController</servlet-name>
        <servlet-class>Controller.RemoveSongController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListAllSongController</servlet-name>
        <servlet-class>Controller.ListAllSongController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSongController</servlet-name>
        <url-pattern>/AddSongController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveSongController</servlet-name>
        <url-pattern>/RemoveSongController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllSongController</servlet-name>
        <url-pattern>/ListAllSongController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>songPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
